<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <include
            android:id="@+id/progressBar"
            layout="@layout/me_progress_view" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/emailEditText"
            style="@style/styleEditText"
            android:layout_below="@+id/appCompatImageView"
            android:layout_marginTop="50dp"
            android:autofillHints=""
            android:hint="@string/user_hint_email"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColorHint="@color/lightWhite" />

        <EditText
            android:id="@+id/passwordEditText"
            style="@style/styleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailEditText"
            android:autofillHints=""
            android:hint="@string/user_hint_password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColorHint="@color/lightWhite"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/resetPasswordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwordEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="@string/user_forgot_password"
            android:textColor="@color/lightWhite"
            android:textStyle="bold"
            android:textSize="20sp" />

        <!--TextView
            android:id="@+id/changePasswordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resetPasswordTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="@string/user_change_password"
            android:textColor="@color/lightWhite"
            android:textSize="20sp" /-->

        <TextView
            android:id="@+id/loginTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resetPasswordTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="@string/user_sign_in"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/lightWhite"
            android:textStyle="bold" />

        <include
            android:id="@+id/signUpTextView"
            layout="@layout/me_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/loginTextView"
            android:layout_marginTop="100dp" />

    </RelativeLayout>
</layout>
