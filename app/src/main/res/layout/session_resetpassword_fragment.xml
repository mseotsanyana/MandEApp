<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <include
            android:id="@+id/progressBar"
            layout="@layout/me_progress_view" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_below="@+id/appCompatImageView"
            android:layout_marginTop="50dp"
            android:text="@string/user_recover_password_msg"
            android:textColor="@color/lightWhite"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/emailEditText"
            style="@style/styleEditText"
            android:layout_below="@+id/descriptionTextView"
            android:layout_marginTop="20dp"
            android:autofillHints=""
            android:hint="@string/user_hint_email"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColorHint="@color/lightWhite" />

        <TextView
            android:id="@+id/resetPasswordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="@string/user_reset_password"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/lightWhite"
            android:textStyle="bold" />

        <include
            layout="@layout/me_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/resetPasswordTextView"
            android:layout_marginTop="80dp" />

    </RelativeLayout>
</layout>