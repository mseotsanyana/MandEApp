    <style name="DrawerHamburgerStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="PopupTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">#9E9E9E</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- size of the tabs-->
    <style name="TabTestSize" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- fab style -->
    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_large</item>
        <item name="android:src">@drawable/me_ic_add_36</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <!-- fab style -->
    <style name="FabMoreStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_large</item>
        <item name="android:src">@drawable/round_more_horiz_24</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

