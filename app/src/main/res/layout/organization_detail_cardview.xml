<?xml version="1.0" encoding="utf-8"?>
<androidx.recyclerview.widget.RecyclerView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/organization_detail_cardview_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_row">

        <TextView
            android:id="@+id/valHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@color/colorRed"
            android:gravity="center"
            android:text="Country"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/valBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/valHeader"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/valBodyIcon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="15" />

            <TextView
                android:id="@+id/valBodyInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:text="@string/app_name"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/valGotoIcon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="15" />
        </LinearLayout>

        <TextView
            android:id="@+id/valFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/valBody"
            android:background="@color/colorRed"
            android:gravity="center" />
    </RelativeLayout>
</androidx.recyclerview.widget.RecyclerView>